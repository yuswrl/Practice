:root {
	
	--settingsicons:		1;				/* use settings icons in User Settings: 1 = yes, 0 = no											*/
	--font:				"gg sans", "Noto Sans";		/* font used in most places :3													*/
	--textshadow:			transparent;			/* default: transparent						*/
	
	--background:			url(https://i.pinimg.com/originals/b9/08/86/b90886beff7a7664af28e02792674ce7.gif);	/* background image					*/
	--backgroundposition:		center;				/* default: center							*/
	--backgroundsize:		cover;				/* default: cover								*/
	--backgroundblur:		0;				/* default: 0									*/
	
	--popout:			var(--background);		/* default: var(--background)						*/
	--popoutposition:		var(--backgroundposition);	/* default: center								*/
	--popoutsize:			var(--backgroundsize);		/* default: cover								*/
	--popoutblur:			var(--backgroundblur);		/* default: 0								*/
	
	--backdrop:			rgba(0, 0, 0, 0.85);		/* default: rgba(0, 0, 0, 0.85)								*/
	--backdropposition:		center;				/* default: center							*/
	--backdropsize:			cover;				/* default: cover									*/
	--backdropblur:			0;				/* default: 0								*/
	
	--textbrightest: 		255, 255, 255;			/* default: 255, 255, 255										*/
	--textbrighter: 		222, 222, 222;			/* default: 222, 222, 222										*/
	--textbright: 			200, 200, 200;			/* default: 200, 200, 200											*/
	--textdark: 			160, 160, 160;			/* default: 160, 160, 160											*/
	--textdarker: 			125, 125, 125;			/* default: 125, 125, 125											*/
	--textdarkest: 			90, 90, 90;			/* default: 90, 90, 90											*/
	
	--version1_0_5:			none;				

    /* TYSM FOR USING ^_^
    lots of love									*/
